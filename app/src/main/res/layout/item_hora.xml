<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_dia_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lineralayout_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="0dp"
            android:layout_height="89dp"
            android:layout_margin="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:minWidth="200dp"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/txtHoraItemhora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8BC34A"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textAlignment="center"
                tools:text="20ยบ" />

            <TextView
                android:id="@+id/txtTempItemHora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4CAF50"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textAlignment="center"
                tools:text="0ยบ" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:minWidth="200dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgIconoTiempoItemHora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:padding="15dp"
                tools:src="@drawable/dom" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearcopy1_bis"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:minWidth="200dp"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/img_viento_itemHora"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/molino" />

            <TextView
                android:id="@+id/txt_viento_itemHora"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="3/04/2021"
                android:textAlignment="center"
                android:textColor="#FAF8F8" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:minWidth="200dp"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/img_humedad_itemHora"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/humedad" />

            <TextView
                android:id="@+id/txt_humedad_itemHora"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="3/04/2021"
                android:textAlignment="center"
                android:textColor="#FAF8F8" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearcopy1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:minWidth="200dp"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/img_probabilidad_precipitacion_itemHora"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/precipitacion" />

            <TextView
                android:id="@+id/txt_probabilidad_precipitacion_itemHora"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="3/04/2021"
                android:textAlignment="center"
                android:textColor="#FAF8F8" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_uv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:minWidth="200dp"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/img_uv_itemHora"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/proteccionuv" />

            <TextView
                android:id="@+id/txtUvItemHora"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="3/04/2021"
                android:textAlignment="center"
                android:textColor="#FAF8F8" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>